#include <stdio.h>

int main() {
    int n;
    printf("Enter the last number: ");
    scanf("%d", &n);
    int sum = 0;

    printf("Numbers: ");
    for (int i = 2; i <= n; i += 2) {
        sum += i; 
        printf("%d", i);

        if (i + 2 <= n) {
            printf(" + ");
        }
    }
    printf("\n");

    printf("The sum of numbers from 2 to %d by gaping 2 is: %d\n", n, sum);
    return 0;
}

//2+4+6+8
